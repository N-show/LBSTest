<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.sony.view.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        app:titleText="CustomView"
        app:titleTextColor="#990000"
        app:titleTextSize="60sp" />

    <com.sony.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleColor="@color/colorPrimaryDark"
        app:titleSize="130dp"
        app:titleText1="aaa" />

    <Button
        android:id="@+id/create_database"
        android:text="call phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_notification"
        android:text="send notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.LinearLayoutCompat>
